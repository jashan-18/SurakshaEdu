<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SurakshEdu" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
    <style name="VideoCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="cardCornerRadius">22dp</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="VideoTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">22dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
