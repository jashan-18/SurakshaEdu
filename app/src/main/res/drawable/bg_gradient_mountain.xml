<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background gradient -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#0A1D37"
                android:centerColor="#0A1D37"
                android:endColor="#EAF4FF" />
        </shape>
    </item>

    <!-- Soft wave/mountain layer -->
    <item android:top="220dp">
        <shape>
            <solid android:color="#F5FAFF"/>
            <corners android:topLeftRadius="60dp"
                android:topRightRadius="60dp"/>
        </shape>
    </item>

</layer-list>
