<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- ðŸŒ Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:letterSpacing="0.04"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join SurakshEdu â€¢ Stay Prepared"
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="32dp" />

        <!-- ðŸ”ï¸ Glass Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="26dp"
            app:cardElevation="14dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0F2FF"
            app:cardBackgroundColor="#F2F9FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- ðŸ‘¤ Name -->
                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_input_light_blue"
                    android:hint="Full Name"
                    android:padding="14dp"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp" />

                <!-- ðŸ“§ Email -->
                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_input_light_blue"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:padding="14dp"
                    android:textSize="15sp" />

                <!-- ðŸ”’ Password -->
                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_input_light_blue"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="14dp"
                    android:textSize="15sp" />

                <!-- ðŸ”’ Confirm -->
                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_input_light_blue"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:padding="14dp"
                    android:textSize="15sp" />

                <!-- ðŸš€ Signup Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSignup"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginTop="28dp"
                    android:text="Continue To Email Verification"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/primary"
                    app:cornerRadius="30dp"
                    app:elevation="10dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ‡®ðŸ‡³ Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIH | Government of Punjab"
            android:textSize="12sp"
            android:textColor="#B3FFFFFF"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
